<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TrainLiveStatus" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.TrainLiveStatus.NoActionBar">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>


    <style name="Theme.TrainLiveStatus.NoActionBar.Splash_status">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/sp_back</item>

    </style>

    <style name="Theme.TrainLiveStatus.NoActionBar.Dashboard_status">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/white</item>

    </style>

    <style name="Theme.TrainLiveStatus.NoActionBar.Setting_status">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">#E5E5E5</item>

    </style>

    <style name="Theme.TrainLiveStatus.NoActionBar.SeatAvailabel_status">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">#FAF6F5F5</item>

    </style>

    <style name="start_screen_linerlayout">
        <item name="android:layout_width">@dimen/_200sdp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="Theme.TrainLiveStatus">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">#141414</item>
    </style>


    <style name="dashboard_imageview">
        <item name="android:layout_width">@dimen/_140sdp</item>
        <item name="android:layout_height">@dimen/_140sdp</item>
        <item name="android:layout_weight">1</item>
    </style>


    <style name="DatePickerTheme" parent="Theme.AppCompat.Light.Dialog">

        <item name="colorAccent">@color/colorYellow</item>

    </style>


    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:background">@drawable/icn_dropdown_arw</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>

    <style name="Theme.TrainLiveStatus.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TrainLiveStatus.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyThemeOverlay_Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="menu">@menu/toolbar_menu</item>
        <item name="navigationIcon">@drawable/ic_back_btn</item>
    </style>

    <style name="Without_Menu" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="navigationIcon">@drawable/ic_back_btn</item>
    </style>


</resources>